@model BloodBankProject.BLL.ViewModels.DonorViewModel.DonorReadVM

<div class="container mt-4">
    <h2 class="mb-4">Donor Details</h2>
    <div class="card">
        <div class="card-header bg-primary text-white d-flex justify-content-between">
            <h3 class="mb-0">@Model.Name</h3>
           
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <p><strong>Email:</strong> @Model.Email</p>
                    <p><strong>City:</strong> @Model.City</p>
                </div>
                <div class="col-md-6">
                    <p><strong>National ID:</strong> @Model.NationalId</p>
                    <p><strong>Last Donation Date:</strong> @Model.LastDonationDate.ToString("d")</p>
                </div>
            </div>
        </div>
    </div>

    <h3 class="mt-4 mb-3">Donation History</h3>
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Date</th>
                    <th>Blood Bank City</th>
                    <th>Blood Type</th>
                    <th>Virus Test Result</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var donation in Model.DonationReadVM)
                {
                    <tr>
                        <td>@donation.DonationDate.ToString("d")</td>
                        <td>@donation.BloodBankCity</td>
                        <td>@donation.BloodType</td>
                        <td>
                            @if (donation.VirusTestResult)
                            {
                                <span class="badge bg-danger">Positive</span>
                            }
                            else
                            {
                                <span class="badge bg-success">Negative</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    .card-header h3 {
        margin-bottom: 0;
    }

    .table th {
        background-color: #343a40;
        color: white;
    }

    .btn-sm {
        margin-left: 10px;
    }
</style>
