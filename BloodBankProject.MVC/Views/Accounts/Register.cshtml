@model BloodBankProject.BLL.ViewModels.DonorViewModel.DonorRegisterVM


<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Donor Registration</h4>
                </div>
                <div class="card-body">
                    <form method="post">
                        <!-- Name -->
                        <div class="form-group mb-3">
                            <label asp-for="@Model.UserName" class="form-label"></label>
                            <input asp-for="@Model.UserName" class="form-control" />
                            <span asp-validation-for="@Model.UserName" class="text-danger"></span>
                        </div>

                        <!-- Email -->
                        <div class="form-group mb-3">
                            <label asp-for="@Model.Email" class="form-label"></label>
                            <input asp-for="@Model.Email" class="form-control" />
                            <span asp-validation-for="@Model.Email" class="text-danger"></span>
                        </div>

                        <!-- National ID -->
                        <div class="form-group mb-3">
                            <label asp-for="@Model.NationalId" class="form-label"></label>
                            <input asp-for="@Model.NationalId" class="form-control" />
                            <span asp-validation-for="@Model.NationalId" class="text-danger"></span>
                        </div>

                        <!-- City -->
                        <div class="form-group mb-3">
                            <label asp-for="@Model.City" class="form-label"></label>
                            <input asp-for="@Model.City" class="form-control" />
                            <span asp-validation-for="@Model.City" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="@Model.LastDonationDate" class="form-label"></label>
                            <input asp-for="@Model.LastDonationDate" class="form-control" />
                            <span asp-validation-for="@Model.LastDonationDate" class="text-danger"></span>
                        </div>

                        <!-- Password -->
                        <div class="form-group mb-3">
                            <label asp-for="@Model.Password" class="form-label"></label>
                            <input asp-for="@Model.Password" class="form-control" type="password" />
                            <span asp-validation-for="@Model.Password" class="text-danger"></span>
                        </div>

                        <!-- Confirm Password -->
                        <div class="form-group mb-3">
                            <label asp-for="@Model.ConfirmPassword" class="form-label"></label>
                            <input asp-for="@Model.ConfirmPassword" class="form-control" type="password" />
                            <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
                        </div>

                        <!-- Submit Button -->
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary w-100">Register</button>
                        </div>

                        <!-- Error Message -->
                        <div class="form-group">
                            <span asp-validation-summary="ModelOnly" class="text-danger"></span>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}