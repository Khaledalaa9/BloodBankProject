@model BloodBankProject.BLL.ViewModels.DonorViewModel.DonorLoginVM

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Donor Login</h4>
                </div>
                <div class="card-body">
                    <form method="post">
                        <!-- Email -->
                        <div class="form-group mb-3">
                            <label asp-for="@Model.Email" class="form-label"></label>
                            <input asp-for="@Model.Email" class="form-control" />
                            <span asp-validation-for="@Model.Email" class="text-danger"></span>
                        </div>

                        <!-- Password -->
                        <div class="form-group mb-3">
                            <label asp-for="@Model.Password" class="form-label"></label>
                            <input asp-for="@Model.Password" class="form-control" />
                            <span asp-validation-for="@Model.Password" class="text-danger"></span>
                        </div>

                        <!-- Submit Button -->
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary w-100">Login</button>
                        </div>

                        <!-- Error Message -->
                        <div class="form-group">
                            <span asp-validation-summary="ModelOnly" class="text-danger"></span>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}